# ========================================
# AI导师对话系统 - 环境配置
# ========================================

# 应用基础配置
NODE_ENV=development
PORT=3000
APP_NAME=AI导师对话系统
APP_VERSION=1.0.0

# ========================================
# PostgreSQL 数据库配置 (本地安装)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_mentor_system
DB_USER=ai_mentor_user
DB_PASSWORD=ai_mentor_password_2024
DB_DEBUG=false
DB_POOL_MIN=2
DB_POOL_MAX=20

# ========================================
# Redis 缓存配置 (可选)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ai_mentor_redis_password
REDIS_DB=0
REDIS_TTL=3600

# ========================================
# JWT 认证配置
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# AI 服务配置
# ========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# 百度千帆
QIANFAN_ACCESS_KEY=your_qianfan_access_key
QIANFAN_SECRET_KEY=your_qianfan_secret_key

# 阿里通义千问
DASHSCOPE_API_KEY=your_dashscope_api_key

# ========================================
# 应用功能配置
# ========================================
# 对话设置
MAX_CONVERSATION_LENGTH=100
MAX_MESSAGE_LENGTH=2000
DEFAULT_MENTOR=buffett

# 文件上传
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 安全设置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# ========================================
# 邮件服务配置 (可选)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=AI导师系统 <noreply@aimentor.com>

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ========================================
# 监控和分析 (可选)
# ========================================
# Sentry 错误监控
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX

# ========================================
# 生产环境配置
# ========================================
# SSL 证书
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# CDN 配置
CDN_BASE_URL=https://cdn.yourdomain.com

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket 